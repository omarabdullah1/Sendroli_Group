# Production Environment Variables for Backend
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://mongodb:27017/sendroli_factory
# For external MongoDB (like MongoDB Atlas):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sendroli_factory

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long_change_this
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Security
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=logs/production.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Email Configuration (if needed)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Redis Configuration (if using for caching)
# REDIS_URL=redis://redis:6379