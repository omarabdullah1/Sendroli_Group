{
  "build": {
    "dockerfilePath": "backend/Dockerfile",
    "rootDirectory": "backend",
    "buildCommand": "npm install",
    "startCommand": "npm start"
  },
  "env": {
    "PORT": "5000",
    "NODE_ENV": "production",
    "MONGO_URI": "@mongo-uri"
  },
  "deploy": {
    "port": 5000,
    "restartPolicy": "on-failure"
  },
  "plugins": [
    {
      "name": "mongodb",
      "alias": "mongo"
    }
  ]
}
